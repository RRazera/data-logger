<!DOCTYPE html>

<html>
    <head>
        <title>Home</title>
        <link rel="stylesheet" href="./css/styles.css">
    </head>
    
    <body>
        <div class="main-content">
            {{>header}}

            <button id="add-experiment-button" onclick="hideDiv()">New experiment</button>
            <div class="add-experiment" id="add-experiment-div">
                <form id="add-experiment-form" action="/experiments" method="POST">
                    <input type="text" name="name" id="add-name" placeholder="Name of experiment"> <br>
                    <input type="submit" value="Submit">
                </form>
            </div>

            <div class="experiments">
                <ul>
                    {{#each experiments}}
                        <li> <a href="/experiments/{{this._id}}">{{this.name}}</a></li>
                    {{/each}}
                </ul>
            </div>
        </div>

        {{>footer}}
        <script src="../js/project.js"></script>
    </body>
</html>
